@model List<Movie>

<h1>Movies</h1>

<table class="table table-bordered">
    <tr>
        <th>Title</th>
        <th>Genre</th>
        <th>Runtime</th>

    </tr>
    @foreach (var movie in Model)
    {
<tr>
    <td>@movie.Title</td>
    <td>@movie.Genre</td>
    <td>@movie.Runtime</td>
    <td><a href="MovieLab/DeleteMovie?id=@movie.Id" class="btn btn-danger">Delete @movie.Title</a></td>
    <td><a href="MovieLab/MovieForm?id=@movie.Id" class="btn btn-dark">Edit @movie.Title</a></td>
</tr>

    }

</table>
<td><a href="MovieLab/MovieForm" class="btn btn-dark">Add</a></td>